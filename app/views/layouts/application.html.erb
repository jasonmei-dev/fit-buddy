<!DOCTYPE html>
<html>
  <head>
    <title>Fit-Buddy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
      <%= link_to "Home", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if !logged_in? %>
            <li class="nav-item"><%= link_to "Sign Up", new_user_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Log In", login_path, class: "nav-link" %></li>
          <% else %>
            <li class="nav-item active"><%= link_to "Log Workout", new_user_workout_path(current_user), class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "#{current_user.username}'s Profile", user_path(current_user), class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Log Out", logout_path, method: :post, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <!-- content -->
    <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <%= yield %>
    </div>
  </body>
</html>
