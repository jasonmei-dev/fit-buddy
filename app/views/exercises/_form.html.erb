<%= form_for exercise do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :category %><br>
  <%= f.select :category, ['Chest', 'Shoulders', 'Arms', 'Back', 'Legs', 'Abs'] %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.submit %>
<% end %>
