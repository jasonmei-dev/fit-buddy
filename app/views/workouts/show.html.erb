<div class="container">
  <h1><%= @workout.name %></h1>
  <h3>Duration: <%= @workout.duration_mins %> minutes</h3>
</div>

<div class="container">
  <% if @workout.user == current_user %>
  <div class="row">
    <div class="col-sm-2">
      <%= link_to "Edit Workout", edit_user_workout_path(current_user), class: "btn btn-secondary" %>
    </div>

    <div class="col-sm-3">
      <%= form_tag(user_workout_path(@workout.user, @workout), method: :delete) do %>
      <button class="btn btn-danger" type="submit">Delete Workout</button>
    </div>
    <% end %>
  <% end %>
  </div>
</div>

<div class='container'>
  <table class="table mt-3">
    <thead class="thead-dark">
      <tr>
        <th>Exercise</th>
        <th>Sets</th>
        <th>Reps</th>
        <th>Weight(lbs)</th>
        <th>Rating</th>
        <th>Notes</th>
        <% if @workout.user == current_user %>
          <th><%= link_to "Add Exercise Entry", new_workout_exercise_entry_path(@workout), class: "btn btn-primary" %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @workout.exercise_entries.each do |exercise_entry| %>
      <tr>
        <td><%= exercise_entry.exercise.name %></td>
        <td><%= exercise_entry.sets %></td>
        <td><%= exercise_entry.reps %></td>
        <td><%= exercise_entry.weight_lbs %></td>
        <td><%= exercise_entry.exercise_rating %></td>
        <td><%= exercise_entry.notes %></td>
        <% if @workout.user == current_user %>
          <td>
            <%= link_to "Edit", edit_workout_exercise_entry_path(id: exercise_entry.id, workout_id: exercise_entry.workout_id), class: "btn btn-secondary" %>
            <%= form_tag(workout_exercise_entry_path(id: exercise_entry.id, workout_id: exercise_entry.workout_id), method: :delete) do %>
            <button class="btn btn-danger" type="submit">Delete</button>
          <% end %>
          </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
