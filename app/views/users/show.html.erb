<h1>Hi, <%= @user.username %>!</h1>

<h4>User Info:</h4>
<p>
  Username: <%= @user.username %><br>
  Email: <%= @user.email %>
</p>

<br>

<h4>Shared Workouts</h4>
<% @user.workouts.order(created_at: :desc).each do |workout| %>
  <%= link_to "#{workout.created_at.in_time_zone("America/New_York").strftime("%A - %m/%d/%Y - %l:%M %p")} -
   #{workout.name}", user_workout_path(user_id: workout.user_id, id: workout.id) if workout.share_status %><br>
<% end %>

<h4>Private Workouts</h4>
<% @user.workouts.order(created_at: :desc).each do |workout| %>
  <%= link_to "#{workout.created_at.in_time_zone("America/New_York").strftime("%A - %m/%d/%Y - %l:%M %p")} -
   #{workout.name}", user_workout_path(user_id: workout.user_id, id: workout.id) if !workout.share_status %><br>
<% end %>
