<section id="user-index">
  <div class="index-container">
    <div class="index-content">
      <h1>User Index</h1>

      <ul class="list-group">
        <% if current_user.id == 1 %>
          <% @users.each do |user| %>
            <li><%= link_to user.full_name, user_path(user) %></li>
          <% end %>
        <% else %>
          <% @users.where.not(id: 1).each do |user| %>
            <li><%= link_to user.full_name, user_path(user) %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

</section>

