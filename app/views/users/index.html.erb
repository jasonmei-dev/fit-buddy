<div class="container">
  <h1>User Index</h1>
</div>

<div class="container">
  <ol class="list-group">
    <% if current_user.id == 1 %>
      <% @users.each do |user| %>
        <li class="list-group-item list-group-item-action"><%= link_to user.username, user_path(user) %></li>
      <% end %>
    <% else %>
      <% @users.where.not(id: 1).each do |user| %>
        <li class="list-group-item list-group-item-action"><%= link_to user.username, user_path(user) %></li>
      <% end %>
    <% end %>
  </ol>
</div>
