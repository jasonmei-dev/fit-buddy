<h2>New User</h2>

<% if @user.errors.any? %>
  <h3>
    <%= pluralize(@user.errors.count, "error") %>
    prohibited the creation of new User:
  </h3>

  <ul>
    <%= @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.submit "Sign Up" %>
<% end %>
